<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="18:20"
            android:textColor="#cccccc" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/iv_user_head"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="left|center"
            android:src="@drawable/avatar" />

        <TextView
            android:id="@+id/tv_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_user_head"
            android:gravity="left|center"
            android:minWidth="50dp"
            android:minHeight="36dp"
            android:textColor="#494949"
            android:textSize="18sp"
            android:lineSpacingExtra="2dp"
            android:text="ImoocDemoProject"
            android:background="@drawable/msg_bubble_white" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/tv_msg_content"
            android:gravity="left|center"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:text="" />

<!--        android:layout_alignParentLeft="true"-->
<!--        android:visibility="visible"-->
<!--        android:textColor="#818181"-->

<!--        mine-->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_head"
            android:layout_toLeftOf="@id/tv_msg_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:visibility="visible"
            android:lineSpacingExtra="2dp"
            android:text="小明"
            android:textSize="15sp"
            android:singleLine="true"
            android:textColor="#818181"/>

<!--        other-->
        <!--<TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/iv_user_head"
            android:text="@string/xiaoming"
            android:textSize="14sp"
            android:singleLine="true"
            android:visibility="visible"
            android:textColor="#818181"
            android:gravity="center"
            android:layout_toLeftOf="@id/tv_msg_content" />-->
    </RelativeLayout>
</LinearLayout>